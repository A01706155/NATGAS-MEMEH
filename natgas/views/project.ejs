<%- include('includes/head.ejs') %>   
    <div id="div_project_tab">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s3"><a href="#div_project_detail">Detail</a></li>
                <li class="tab col s3"><a href="#div_story_list">Story List</a></li>
                <li class="tab col s3"><a href="#div_user_list">User List</a></li>
            </ul>
        </div>
   
        <div id="div_project_detail" class="col s12">
            <div class="row">
                <form class="col s12" id="form_project" action="\project\submit" method="POST">
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="id" name="id" type="text" class="validate">
                            <label for="id">project id</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="name" name="name" type="text" class="validate">
                            <label for="name">name</label>
                        </div>
                    </div>              
                </form>
            </div>
        </div><!--End of Detail Div-->

        <div id="div_story_list" class="col s12">
            <table class="striped">
                <thead>
                    <tr>
                        <th>Story ID</th>
                        <th>Story Name</th>
                    </tr>
                </thead>

                <tbody>
                    <% for (let story of story_list) { %>
                        <tr>
                            <td> <%= story.id %> </td>
                            <td> <%= story.name %> </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div><!--End of story Div-->

        <div id="div_user_list" class="col s12">
            <table class="striped">
                <thead>
                    <tr>
                        <th>User ID</th>
                        <th>User Name</th>
                    </tr>
                </thead>

                <tbody>
                    <% for (let user of user_list) { %>
                        <tr>
                            <td> <%= user.id %> </td>
                            <td> <%= user.name %> </td>
                        </tr>
                    <% } %>                    
                </tbody>
            </table>
        </div><!--End of User Div--> 
    
    </div><!--End of Tab div--> 
    

    <div id="div_control">

    </div>



    <%- include('includes/tail.ejs') %>
    <script type="text/javascript" src="/js/project.js"></script> 
    <%- include('includes/end.ejs') %>