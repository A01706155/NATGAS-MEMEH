<%- include('partials/head.ejs') %>
<%- include('partials/navbar.ejs') %>
  
  <main class="container">
    <!-- Titulo -->
    <h1 class="header center white-text"><%= titulo %></h1>
    
    <!-- Search bar -->
    <div class="white-text searchbar">
      <input type="hidden" id="_csrf" name="_csrf" value="<%= csrfToken %>">
      
      <div class="input-field">
        <i class="material-icons prefix">search</i>
        <label for="buscar">Escribe aquí para buscar un proyecto</label>
        <input class="white-text" type="text" name="buscar" id="buscar" onkeyup="buscar()">

      </div> 

    </div>

    <!-- Para que se vea bonito-->
    <div style="backdrop-filter: blur(10px) contrast(70%); padding:20px; border-radius: 20px; margin-bottom: 6%;">
       <!-- Botón para crear un nuevo proyecto-->
       <div class="row center">
        <a href="/proyectos/registrar-proyecto" id="new_project" class="btn-large waves-effect waves-light green lighten-1">Crear nuevo proyecto</a>
      </div>
    
    <!-- Generar proyectos almacenados con tarjetas -->
      <div class="row" id="resultados">
        
        <% for (let proyecto of lista_proyecto) { %>
          
          <div class="col s12 m6 l4">
            <div class="card small grey darken-4">
              <div class="card-content white-text">
                <span class="card-title"><%= proyecto.nombreProyecto %></span>
                <p><%= proyecto.descripcion %></p>
              </div>
              <div class="center card-action">
                <a class="waves-effect waves-light btn teal darken-2" href="/proyectos/<%= proyecto.idProyecto %>"><i class="material-icons left">visibility</i>Ver proyecto</a>
              </div>
            </div>
          </div>
          
        <% } %>

      </div>
      
  </div>

  </main>

  <%- include('partials/footer.ejs') %>

<!-- Script de búsqueda -->  
<script src="/js/buscar.js"></script>