<%- include('partials/head.ejs') %>
<%- include('partials/navbar.ejs') %>

<main class="container">
    <!-- Titulo -->
    <h1 class="header center white-text">Iteraciones</h1>
    
    <!-- Para que se vea bonito-->
    <div style="backdrop-filter: blur(10px) contrast(70%); padding:20px; border-radius: 20px; margin-bottom: 6%;">
       <!-- BotÃ³n para crear un nuevo proyecto-->
       <div class="row center">
        <a href="/proyectos" class="waves-effect waves-light red darken-2 btn"><i class="material-icons left">undo</i>Regresar</a>
        <a href="/proyectos/nueva-iteracion/<%= idProyecto %>" id="new_iteracion" class="btn-large waves-effect waves-light green lighten-1">Crear nueva iteracion</a>
    </div>
    
      <!-- Generar proyectos almacenados con tarjetas -->
        <div class="input-field col s12">
          <i class="material-icons prefix">search</i>
          <input type="text" name="buscar" id="buscar" onkeyup="buscar()">
        </div>  
        <div class="row" id="resultados">
            
            <% for (let iteracion of lista_iteraciones) { %>
              <div class="col s12 m4 l3">
                <div class="card small grey darken-4">
                    <div class="card-image waves-effect waves-block waves-light">
                      <img class="activator" src="/images/background2.jpg">
                    </div>
                    <div class="card-content">
                      <span class="card-title activator grey-text text-lighten-3">Iteracion <%= iteracion.idIteracion %>
                        <i class="material-icons right">arrow_drop_down</i>     
                        <div class="center card-action">
                          <a class="waves-effect waves-light btn teal darken-2" href="/iteracion/<%= iteracion.idIteracion%>"><i class="material-icons left">visibility</i>Ver Iteracion</a>
                        </div>                
                    </div>
                    </div>
                </div>
            <% } %>
          </div>


<%- include('partials/footer.ejs') %>

