<%- include('partials/head.ejs') %>
<%- include('partials/navbar.ejs') %>

<main class="container">
    
    <div class="container white-text" style="margin: auto; min-width:70%; max-width:max-content;">
        <h1 class="center white-text"><%= titulo %></h1>

            <form class="passcontent grey-text text-lighten-1" action="/iteracion/nuevo-casodeuso" method="POST">
                <!-- CSRF -->
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                
                <input class="white-text" type="hidden" name="idAP" value="<%= idAP %>" required><br>
                <input class="white-text" type="hidden" name="idIteracion" value="<%= idIteracion%>" required><br>

                <!-- Actual inputs -->
                yo_como<br>
                <input class="white-text" type="text" name="yo_como" required><br>
                quiero<br>
                <input class="white-text" type="text" name="quiero" required><br>
                para<br>
                <input class="white-text" type="text" name="para" required><br>
                comentario<br>
                <input class="white-text" type="text" name="comentario" required><br>


                <div class="center">
                    <button class="btn-large waves-effect waves-light green" style="width:18rem;" type="submit" name="action">Registrar iteracion
                        <i class="material-icons right">send</i>
                    </button>
                    <p></p>
                    <a href="/iteracion/casosdeuso/<%= idIteracion %>" class="waves-effect waves-light red darken-2 btn"><i class="material-icons left">undo</i>Regresar</a>   
                </div>
            </form>


        </div>
    </main>

<%- include('partials/footer.ejs')  %>
