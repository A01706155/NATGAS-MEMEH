<%- include('partials/head.ejs') %>
<%- include('partials/navbar.ejs') %>

    <div class="container">
        <br><br>
        <a href="/proyectos" class="waves-effect waves-light red darken-2 btn"><i class="material-icons left">undo</i>Regresar</a>
    </div>

    <div class="container white-text" style="margin: auto; min-width:70%; max-width:max-content;">
        <h1 class="center white-text"><%= titulo %></h1>
        
        <form class="passcontent grey-text text-lighten-1" action="/proyectos/:proyecto_id" method="POST">
            <% for (let elemento of proyecto) { %>

                Id <br>
                <input class="white-text" type="text" name="idProyecto" value="<%= proyecto.IdProyecto %>" required>
                Nombre <br>
                <input class="white-text" type="text" name="nombreProyecto" value="<%= proyecto.nombreProyecto %>" required>
                Descripcion <br>
                <input class="white-text" type="text" name="descripcion" value="<%= proyecto.descripcion %>" required>
                Fecha inicio <br>
                <input class="datepicker white-text" type="date" name="fecha_inicio" value="<%= proyecto.fecha_inicio %>" required>
                Fecha fin <br>
                <input class="datepicker white-text" type="date" name="fecha_fin" value="<%= proyecto.fecha_fin %>" required>
                <br><br>           

                <button class="btn waves-effect waves-light" type="submit" name="action"> Guardar
                    <i class="material-icons right">send</i>
                </button>
                <a href="/proyectos/<%=elemento.idProyecto %>" class="waves-effect waves-light btn" > Cancelar </a> <br> 
            <% } %>
        </form>

    </div>    

<%- include('partials/footer.ejs')  %>

</html>