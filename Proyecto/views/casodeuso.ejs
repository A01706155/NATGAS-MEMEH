<%- include('partials/head.ejs') %>
<%- include('partials/navbar.ejs') %>

<main class="container">
    <!-- Titulo -->
    <h1 class="header center white-text">Historias de usuario:</h1>
    <h6 class="header center white-text">Proyecto: <%= idProyecto %> </h6>
    
    <!-- Para que se vea bonito-->
    <div style="backdrop-filter: blur(10px) contrast(70%); padding:20px; border-radius: 20px; margin-bottom: 6%;">
       <!-- BotÃ³n para crear un nuevo proyecto-->
       <div class="row center">
        <a href="/proyectos" class="waves-effect waves-light red darken-2 btn"><i class="material-icons left">undo</i>Regresar</a>
        <a href="/proyectos/nuevo-casodeuso/<%= idProyecto %>" id="new_iteracion" class="btn-large waves-effect waves-light green lighten-1">Crear nuevo Caso de Uso</a>
        <br><br>
        <a href="/proyectos" class="waves-effect waves-light red darken-2 btn"><i class="material-icons left">undo</i>Regresar</a>
    </div>
    
      <!-- Generar proyectos almacenados con tarjetas -->
        <div class="input-field col s12">
          <i class="material-icons prefix">search</i>
          <input type="text" name="buscar" id="buscar" onkeyup="buscar()">
        </div>  
        <div class="row" id="resultados">
            <% for (let caso of lista_historias) { %>
                <div class="col s12 m4 l3">
                    <div class="card small grey darken-4">
                        <div class="card-image waves-effect waves-block waves-light">
                        <img class="activator" src="https://blogs.encamina.com/piensa-en-software-desarrolla-en-colores/wp-content/uploads/sites/21/2019/02/QA-Caso-de-uso.png">
                        </div>
                        <div class="card-content">
                        <span class="card-title activator grey-text text-lighten-3">Historia de usuario <%= caso.idHistoria %>
                            <i class="material-icons right">arrow_drop_down</i>     
                            <div class="center card-action">
                            
                              <!-- Dropdown Trigger -->
                                <a class='dropdown-trigger btn' href='#' data-target='dropdown4'>Historia Usuario</a>

                                <!-- Dropdown Structure -->
                                <ul id='dropdown4' class='dropdown-content'>
                                    <li><a href="/casodeuso/modificar-casodeuso/<%= caso.idHistoria %>"><i class="material-icons">edit</i>Editar</a></li>
                                    <li><a href="/reporte/elegir-tareas/<%= caso.idProyecto %>/<%= caso.idHistoria %>"><i class="material-icons">assignment</i>Elegir Tareas</a></li>
                                    <li class="divider" tabindex="-1"></li>
                                    <li><a href="#!"><i class="material-icons">delete</i>Eliminar</a></li>

                                </ul>
                
                            </div>                
                        </div>
                        </div>
                    </div>
                <% } %>
        </div>
    </div>
</main>


<%- include('partials/footer.ejs') %>