<%- include('partials/head.ejs') %>
<%- include('partials/navbar.ejs') %>

    <main class="container">
    
        <div class="container white-text" style="margin: auto; min-width:70%; max-width:max-content;">
            <h1 class="center white-text"><%= titulo %></h1>

                <form class="passcontent grey-text text-lighten-1" action="/proyectos/registrar-proyecto" id="enviar" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>" >
                    Nombre del proyecto<br>
                    <input class="white-text" type="text" name="nombreProyecto" required><br>
                    Descripción<br>
                    <input class="white-text" type="text" name="descripcion" required><br>
                    Fecha de inicio<br>
                    <input type="text" name="fecha_inicio" id="fecha_inicio" class="datepicker white-text" required><br>
                    <% if (errorfecha) { %> 
                        <div class="red-text text-darken-1" style="font-weight: bold;"><%= errorfecha %></div>
                    <% } %>
                    Fecha de finalización                  
                    <input type="text" name="fecha_fin" id="fecha_fin" class="datepicker white-text" required><br><br>


                    <div class="center">
                        <button class="btn-large waves-effect waves-light green" style="width:18rem;" type="submit" name="action">Registrar proyecto
                            <i class="material-icons right">send</i>
                        </button>
                        <p></p>
                        <a href="/proyectos" class="waves-effect waves-light red darken-2 btn"><i class="material-icons left">undo</i>Regresar</a>   
                    </div>
                    
                    <!-- Script para las fechas al revés -->
                    <script src="/js/evitar_fecha_al_reves.js"></script>

                </form>

            </div>

    </main>

<%- include('partials/footer.ejs')  %>